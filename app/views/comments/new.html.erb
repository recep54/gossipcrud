<%= form_for @comment do |f| %>
  
  <div class= "form-group">
    
    <label>User Id s'il te plait</label>
    <%= f.text_field :user_id, class: 'form-control' %>

  </div>

    <label>Gossip Id s'il te plait</label>
    <%= f.text_field :gossip_id, class: 'form-control' %>

  </div>

  <div class= "form-group">
    
    <label>Le potin que tu veux poser</label>
    <%= f.text_field :commentaire, class: 'form-control' %>

  </div>

  <div class="form-group">

    <button type="submit" class="btn btn-primary" >Creer le potin</button>

  </div>
<% end %>


