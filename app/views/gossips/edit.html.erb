<h1>Editing Gossip</h1>

<%= form_for @gossip do |f| %>
  
  <div class= "form-group">
    
    <label>User Id s'il te plait</label>
    <%= f.text_field :user_id, class: 'form-control' %>

  </div>

  <div class= "form-group">
    
    <label>Le potin que tu veux poser</label>
    <%= f.text_field :potin, class: 'form-control' %>

  </div>

  <div class="form-group">

    <button type="submit" class="btn btn-primary" >Editer  le potin</button>

  </div>
<% end %>

<%= link_to 'Show', @gossip %> |
<%= link_to 'Back', gossips_path %>
